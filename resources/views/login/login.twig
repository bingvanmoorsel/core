{% extends "victory.core::layout.master" %}

{% block body %}
    <div class="victory__login-wrapper">
        <div class="victory__login">

            <h1>Login</h1>

            {% if errors.toArray() %}
                <div class="alert alert-danger" role="alert">
                    {% for error in errors.toArray() %}
                        <p>{{ error[0] }}</p>
                    {% endfor %}
                </div>
            {% endif %}
            {{ form|raw }}
        </div>
    </div>
{% endblock %}
